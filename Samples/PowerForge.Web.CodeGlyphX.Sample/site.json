{
  "$schema": "../Schemas/powerforge.web.sitespec.schema.json",
  "SchemaVersion": 1,
  "Name": "CodeGlyphX",
  "BaseUrl": "https://codeglyphx.com",
  "DefaultTheme": "codeglyphx",
  "TrailingSlash": "always",
  "ContentRoot": "content",
  "ThemesRoot": "themes",
  "DataRoot": "data",
  "StaticAssets": [
    { "Source": "static" }
  ],
  "Collections": [
    {
      "Name": "pages",
      "Input": "content/pages",
      "Output": "/",
      "DefaultLayout": "home",
      "Include": ["*.md", "**/*.md"]
    },
    {
      "Name": "docs",
      "Input": "content/docs",
      "Output": "/docs",
      "DefaultLayout": "docs",
      "Include": ["*.md", "**/*.md"]
    }
  ],
  "Head": {
    "Links": [
      { "Rel": "icon", "Href": "/codeglyphx-qr-icon.png", "Type": "image/png" },
      { "Rel": "apple-touch-icon", "Href": "/codeglyphx-qr-icon.png" },
      { "Rel": "preconnect", "Href": "https://img.shields.io", "Crossorigin": "anonymous" },
      { "Rel": "dns-prefetch", "Href": "https://img.shields.io" }
    ]
  },
  "Social": {
    "Enabled": true,
    "SiteName": "CodeGlyphX",
    "Image": "/codeglyphx-qr-icon.png",
    "TwitterCard": "summary"
  },
  "StructuredData": {
    "Enabled": true,
    "Breadcrumbs": true
  },
  "AssetRegistry": {
    "CssStrategy": "async",
    "Bundles": [
      { "Name": "global", "Css": ["/css/app.css"], "Js": ["/js/site.js"] },
      { "Name": "docs", "Css": ["/css/api-docs.css"], "Js": ["/js/site.js"] }
    ],
    "RouteBundles": [
      { "Match": "/api/**", "Bundles": ["docs"] },
      { "Match": "/docs/api/**", "Bundles": ["docs"] },
      { "Match": "/", "Bundles": ["global"] },
      { "Match": "/benchmarks/**", "Bundles": ["global"] },
      { "Match": "/faq/**", "Bundles": ["global"] },
      { "Match": "/showcase/**", "Bundles": ["global"] },
      { "Match": "/docs/**", "Bundles": ["global"] },
      { "Match": "/playground/**", "Bundles": ["global"] },
      { "Match": "/pricing/**", "Bundles": ["global"] }
    ],
    "Preloads": [],
    "CriticalCss": [
      { "Name": "codeglyphx", "Path": "themes/codeglyphx/critical.css" }
    ]
  },
  "A11y": {
    "SkipLinkLabel": "Skip to content",
    "ExternalLinkLabel": "Opens in a new tab",
    "NavToggleLabel": "Toggle navigation",
    "SearchLabel": "Search"
  },
  "LinkRules": {
    "ExternalRel": "noopener",
    "ExternalTarget": "_blank",
    "AddExternalIcon": true
  },
  "Navigation": {
    "Menus": [
      {
        "Name": "main",
        "Items": [
          { "Title": "Home", "Url": "/" },
          { "Title": "Playground", "Url": "/playground/" },
          { "Title": "Docs", "Url": "/docs/" },
          { "Title": "Benchmarks", "Url": "/benchmarks/" },
          { "Title": "Showcase", "Url": "/showcase/" },
          { "Title": "Pricing", "Url": "/pricing/" }
        ]
      },
      {
        "Name": "footer-product",
        "Items": [
          { "Title": "Home", "Url": "/" },
          { "Title": "Playground", "Url": "/playground/" },
          { "Title": "Docs", "Url": "/docs/" },
          { "Title": "Benchmarks", "Url": "/benchmarks/" },
          { "Title": "Showcase", "Url": "/showcase/" },
          { "Title": "Pricing", "Url": "/pricing/" }
        ]
      },
      {
        "Name": "footer-resources",
        "Items": [
          { "Title": "FAQ", "Url": "/faq/" },
          { "Title": "NuGet Package", "Url": "https://www.nuget.org/packages/CodeGlyphX", "External": true },
          { "Title": "GitHub Repository", "Url": "https://github.com/EvotecIT/CodeGlyphX", "External": true },
          { "Title": "Report Issue", "Url": "https://github.com/EvotecIT/CodeGlyphX/issues", "External": true },
          { "Title": "Discord", "Url": "https://evo.yt/discord", "External": true }
        ]
      },
      {
        "Name": "footer-company",
        "Items": [
          { "Title": "Evotec Services", "Url": "https://evotec.xyz", "External": true },
          { "Title": "Blog", "Url": "https://evotec.xyz/hub", "External": true }
        ]
      }
    ],
    "Actions": [
      {
        "Title": "Auto mode (click to switch to light)",
        "AriaLabel": "Auto mode (click to switch to light)",
        "Kind": "button",
        "CssClass": "nav-icon theme-cycle-btn",
