{
  "$schema": "../Schemas/powerforge.web.sitespec.schema.json",
  "SchemaVersion": 1,
  "Name": "CodeGlyphX",
  "BaseUrl": "https://codeglyphx.com",
  "DefaultTheme": "codeglyphx",
  "TrailingSlash": "always",
  "ContentRoot": "content",
  "ThemesRoot": "themes",
  "DataRoot": "data",
  "StaticAssets": [
    { "Source": "static" }
  ],
  "Collections": [
    {
      "Name": "pages",
      "Input": "content/pages",
      "Output": "/",
      "DefaultLayout": "home",
      "Include": ["*.md", "**/*.md"]
    },
    {
      "Name": "docs",
      "Input": "content/docs",
      "Output": "/docs",
      "DefaultLayout": "docs",
      "Include": ["*.md", "**/*.md"]
    }
  ],
  "Social": {
    "Enabled": true,
    "SiteName": "CodeGlyphX",
    "Image": "/codeglyphx-qr-icon.png",
    "TwitterCard": "summary"
  },
  "StructuredData": {
    "Enabled": true,
    "Breadcrumbs": true
  },
  "AssetRegistry": {
    "CssStrategy": "async",
    "Bundles": [
      { "Name": "global", "Css": ["/css/app.css"], "Js": ["/js/site.js"] },
      { "Name": "docs", "Css": ["/css/api-docs.css"], "Js": ["/js/site.js"] }
    ],
    "RouteBundles": [
      { "Match": "/docs/**", "Bundles": ["docs"] },
      { "Match": "/", "Bundles": ["global"] },
      { "Match": "/benchmarks/**", "Bundles": ["global"] },
      { "Match": "/faq/**", "Bundles": ["global"] },
      { "Match": "/showcase/**", "Bundles": ["global"] },
      { "Match": "/playground/**", "Bundles": ["global"] }
    ],
    "Preloads": [],
    "CriticalCss": [
      { "Name": "codeglyphx", "Path": "themes/codeglyphx/critical.css" }
    ]
  },
  "A11y": {
    "SkipLinkLabel": "Skip to content",
    "ExternalLinkLabel": "Opens in a new tab",
    "NavToggleLabel": "Toggle navigation",
    "SearchLabel": "Search"
  },
  "LinkRules": {
    "ExternalRel": "noopener",
    "ExternalTarget": "_blank",
    "AddExternalIcon": true
  },
  "Navigation": {
    "Menus": [
      {
        "Name": "main",
        "Items": [
          { "Title": "Home", "Url": "/" },
          { "Title": "Playground", "Url": "/playground/" },
          { "Title": "Docs", "Url": "/docs/" },
          { "Title": "Benchmarks", "Url": "/benchmarks/" },
          { "Title": "Showcase", "Url": "/showcase/" }
        ]
      }
    ]
  }
}
