      {
        "Title": "Install",
        "AriaLabel": "Install",
        "Url": "https://www.nuget.org/packages/CodeGlyphX",
        "External": true,
        "CssClass": "nav-cta",
        "IconHtml": "<svg viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' class='nav-cta-icon' aria-hidden='true' focusable='false'><path d='M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4'/></svg>",
