{
  "$schema": "../Schemas/powerforge.web.sitespec.schema.json",
  "SchemaVersion": 1,
  "Name": "ExampleSite",
  "BaseUrl": "https://example.com",
  "DefaultTheme": "base-scriban",
  "TrailingSlash": "always",
  "ContentRoot": "content",
  "ProjectsRoot": "projects",
  "ThemesRoot": "themes",
  "SharedRoot": "shared",
  "DataRoot": "data",
  "ArchetypesRoot": "archetypes",
  "Collections": [
    {
      "Name": "pages",
      "Input": "content/pages",
      "Output": "/",
      "DefaultLayout": "page",
      "Include": ["**/*.md"]
    },
    {
      "Name": "docs",
      "Input": "content/docs",
      "Output": "/docs",
      "DefaultLayout": "docs",
      "TocFile": "content/docs/toc.json",
      "Include": ["**/*.md"]
    },
    {
      "Name": "blog",
      "Input": "content/blog",
      "Output": "/blog",
      "DefaultLayout": "post",
      "ListLayout": "list",
      "Include": ["**/*.md"],
      "SortBy": "date",
      "SortOrder": "desc"
    },
    {
      "Name": "projects",
      "Input": "projects/*/content",
      "Output": "/projects/{project}",
      "DefaultLayout": "project",
      "Include": ["**/*.md"]
    }
  ],
  "EditLinks": {
    "Enabled": true,
    "Template": "https://github.com/EvotecIT/Repo/edit/main/{path}",
    "PathBase": ""
  },
  "RouteOverrides": [
    { "From": "/about", "To": "/company/about", "Status": 301, "MatchType": "Exact", "PreserveQuery": true }
  ],
  "Redirects": [
    { "From": "/old-blog-url", "To": "/blog/new-url", "Status": 301, "MatchType": "Exact", "PreserveQuery": true },
    { "From": "/legacy/*", "To": "/blog/{path}", "Status": 302, "MatchType": "Wildcard", "PreserveQuery": true }
  ],
  "AssetRegistry": {
    "Bundles": [
      { "Name": "global", "Css": ["/themes/base-scriban/assets/site.css"], "Js": [] },
      { "Name": "docs", "Css": ["/themes/base-scriban/assets/docs.css"], "Js": ["/themes/base-scriban/assets/search.js"] }
    ],
    "RouteBundles": [
      { "Match": "/docs/**", "Bundles": ["global", "docs"] },
      { "Match": "/**", "Bundles": ["global"] }
    ],
    "Preloads": [],
    "CriticalCss": [
      { "Name": "base", "Path": "themes/base-scriban/critical.css" }
    ]
  },
  "A11y": {
    "SkipLinkLabel": "Skip to content",
    "ExternalLinkLabel": "Opens in a new tab",
    "NavToggleLabel": "Toggle navigation",
    "SearchLabel": "Search"
  },
  "LinkRules": {
    "ExternalRel": "noopener",
    "ExternalTarget": "_blank",
    "AddExternalIcon": true
  },
  "Outputs": {
    "Rules": [
      { "Kind": "home", "Formats": ["html", "rss"] },
      { "Kind": "section", "Formats": ["html", "rss"] },
      { "Kind": "page", "Formats": ["html", "json"] },
      { "Kind": "taxonomy", "Formats": ["html", "json"] },
      { "Kind": "term", "Formats": ["html", "json"] }
    ]
  },
  "Taxonomies": [
    {
      "Name": "tags",
      "BasePath": "/tags",
      "ListLayout": "taxonomy",
      "TermLayout": "term"
    }
  ],
  "Navigation": {
    "Menus": [
      {
        "Name": "main",
        "Label": "Main",
        "Items": [
          { "Title": "Home", "Url": "/" },
          { "Title": "Docs", "Url": "/docs/" },
          { "Title": "Blog", "Url": "/blog/" },
          { "Title": "Tags", "Url": "/tags/" }
        ]
      }
    ],
    "Actions": [
      { "Title": "Get Started", "Url": "/docs/", "CssClass": "pf-button" }
    ],
    "Auto": [
      {
        "Collection": "docs",
        "Menu": "docs",
        "Root": "/docs",
        "IncludeIndex": true,
        "MaxDepth": 2,
        "Sort": "weight"
      }
    ]
  },
  "Analytics": {
    "Enabled": false,
    "Provider": "FirstParty",
    "Endpoint": "/api/track",
    "RespectDnt": true,
    "SampleRate": 1.0
  },
  "Versioning": {
    "Enabled": true,
    "BasePath": "/docs",
    "Current": "v2",
    "Versions": [
      { "Name": "v2", "Label": "v2", "Url": "/docs/", "Default": true, "Latest": true },
      { "Name": "v1", "Label": "v1 (Legacy)", "Url": "/docs/v1/", "Deprecated": true }
    ]
  },
  "LinkCheck": {
    "Enabled": true,
    "IncludeExternal": false,
    "Skip": ["**/tags/**"]
  },
  "Cache": {
    "Enabled": true,
    "Root": ".cache/powerforge-web",
    "Mode": "contenthash"
  }
}
